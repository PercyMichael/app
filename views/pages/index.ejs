        <table class="table">
          <thead><h5>Rooms</h5></thead>
          <tr>
            <th>ID</th>
            <th>NAME</th>
            <th>RENT</th>
            <td>Actions</td>
          </tr>
          <% results.forEach((data)=>{ %>
          
          <tr>
            <td><%=data.id%></td><td><%=data.unit_name%></td><td><%=data.monthly_rent%></td>
            <td>
              <a href="./edit/<%= data.id %>" >
