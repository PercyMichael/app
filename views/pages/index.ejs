              </a>
              <a href="./delete/<%= data.id %>" >
                <button class="btn btn-sm btn-outline-danger">Delete</button>
             </a>
             <a href="./single-view/<%= data.id %>" >
                <button class="btn btn-sm btn-success">View</button>
             </a>
            </td>
          </tr>
          
          <% }) %>
        </table>
        </ul>
      </div>
    </main>
    <footer><%- include('../templates/footer') %></footer>
